<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context="online.diary.Profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:background="@drawable/unnamed"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp" />
        </LinearLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="22dp"
        android:text="You need to Login to syn and safe your records" />
        <TextView
            android:drawableLeft="@android:drawable/ic_dialog_info"
            android:shadowColor="#be2134"
            android:text="It is recommended to login once to sync your data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/gs"
        android:text="Sign In"
        android:background="#ede1a1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/can"
        android:background="@color/cardview_dark_background"
        android:text="Cancel"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>